<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] [%-20.20thread] [%-40.40logger] %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.cycos" level="TRACE"/>
    
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>